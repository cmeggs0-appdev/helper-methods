<h1>
  List of all books
</h1>

<hr>

<div>
  <%= link_to "Add a new book", new_book_path %>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Description
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td>
      <%= book.id %>
    </td>

    <td>
      <%= book.title %>
    </td>

    <td>
      <%= book.description %>
    </td>

    <td>
      <%= time_ago_in_words(book.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(book.updated_at) %> ago
    </td>

    <td>
      <%= link_to "Show Details", book %>
    </td>
  </tr>
  <% end %>
</table>
