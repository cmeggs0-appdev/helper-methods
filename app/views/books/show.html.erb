<div>
  <div>
    <h1>
      Book #<%= @book.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", books_path %>
      </div>

      <div>
        <%= link_to "Edit book", edit_book_path(@book) %>
      </div>

      <div>
        <%= link_to "Delete book", book_path(@book), method: :delete %>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @book.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @book.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@book.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
